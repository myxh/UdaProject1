<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.myxh.udaproject1.MainActivity">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Nanodegree Apps!"
            android:gravity="center_horizontal"
            android:textSize="@dimen/tv_text_size"
            android:textColor="@color/color_udacity"
            android:layout_marginTop="@dimen/item_marginTop"
            android:id="@+id/textView"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_marginTop"
            android:background="@color/color_udacity"
            android:text="popular movies"
            android:textColor="@android:color/white"
            android:onClick="showToastPopularMovie"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_marginTop"
            android:background="@color/color_udacity"
            android:text="stock hawk"
            android:textColor="@android:color/white"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_marginTop"
            android:background="@color/color_udacity"
            android:text="build it bigger"
            android:textColor="@android:color/white"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_marginTop"
            android:background="@color/color_udacity"
            android:text="make your app material"
            android:textColor="@android:color/white"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_marginTop"
            android:background="@color/color_udacity"
            android:text="go ubiquitous"
            android:textColor="@android:color/white"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_marginTop"
            android:background="@color/color_udacity"
            android:text="capstone"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</RelativeLayout>
